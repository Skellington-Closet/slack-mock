{
  "name": "slack-mock",
  "version": "0.0.0",
  "description": "Slack API mocker",
  "main": "index.js",
  "scripts": {
    "pretest": "standard index.js mocker/*.js lib/*.js test/*.js test/**/*.js --fix",
    "test": "istanbul cover --report lcov --dir ./coverage/ _mocha --recursive ./test/ --grep ./test/**/*.spec.js -- --colors --reporter spec",
    "ci": "npm test && cat ./coverage/lcov.info | coveralls"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "nock": "^9.0.2",
    "qs": "^6.3.0",
    "request": "^2.79.0",
    "winston": "^2.3.0",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "standard": "^8.5.0"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ]
  }
}
